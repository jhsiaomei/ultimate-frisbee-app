<%= form_tag "/events/#{@event.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @event.name %>
  </div>
  <div class="form-group">
    <%= label_tag :event_type %>
    <%= text_field_tag :event_type, @event.event_type %>
  </div>
  <div class="form-group">
    <%= label_tag :date_start %>
    <%= text_field_tag :date_start, @event.date_start %>
  </div>
  <div class="form-group">
    <%= label_tag :date_stop %>
    <%= text_field_tag :date_stop, @event.date_stop %>
  </div>
  <div class="form-group">
    <%= label_tag :time_start %>
    <%= text_field_tag :time_start, @event.time_start %>
  </div>
  <div class="form-group">
    <%= label_tag :time_stop %>
    <%= text_field_tag :time_stop, @event.time_stop %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @event.description %>
  </div>
  <div class="form-group">
    <%= label_tag :field_id %>
    <%= text_field_tag :field_id, @event.field_id %>
  </div>
  <div>
    <%= button_tag 'Submit', class: "btn btn-default" %>
  </div>
<% end %>