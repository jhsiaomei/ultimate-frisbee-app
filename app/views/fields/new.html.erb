<%= form_tag '/fields', method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @field.name %>
  </div>
  <div class="form-group">
    <%= label_tag :intersection %>
    <%= text_field_tag :intersection, @field.intersection %>
  </div>
  <div class="form-group">
    <%= label_tag :street_number %>
    <%= text_field_tag :street_number, @field.street_number %>
  </div>
  <div class="form-group">
    <%= label_tag :street_address %>
    <%= text_field_tag :street_address, @field.street_address %>
  </div>
  <div class="form-group">
    <%= label_tag :city %>
    <%= text_field_tag :city, @field.city %>
  </div>
  <div class="form-group">
    <%= label_tag :state %>
    <%= text_field_tag :state, @field.state %>
  </div>
  <div class="form-group">
    <%= label_tag :zip_code %>
    <%= text_field_tag :zip_code, @field.zip_code %>
  </div>
  <div>
    <%= button_tag 'Submit', class: "btn btn-default" %>
  </div>
<% end %>