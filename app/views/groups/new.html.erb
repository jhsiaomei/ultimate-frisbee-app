<%= form_tag '/groups', method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, @group.name %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, @group.description %>
  </div>
  <div class="form-group">
    <%= label_tag :field_id_1 %>
    <%= text_field_tag :field_id_1, @group.field_id_1 %>
  </div>
  <div class="form-group">
    <%= label_tag :field_id_2 %>
    <%= text_field_tag :field_id_2, @group.field_id_2 %>
  </div>
  <div class="form-group">
    <%= label_tag :field_id_3 %>
    <%= text_field_tag :field_id_3, @group.field_id_3 %>
  </div>
  <div class="form-group">
    <%= label_tag :group_type %>
    <%= text_field_tag :group_type, @group.group_type %>
  </div>
  <div>
    <%= button_tag 'Submit', class: "btn btn-default" %>
  </div>
<% end %>